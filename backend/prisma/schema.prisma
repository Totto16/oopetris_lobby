generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "foreignKeys"
}

model User {
  id       String   @id @default(uuid())
  username String   @unique
  password String
  role     UserRole @default(User)

  LobbyPlayer LobbyPlayer? @ignore
  Lobby       Lobby[]      @ignore

  @@index([id, username])
  @@map("user")
}

model LobbyPlayer {
  player_id String @unique
  player    User   @relation(fields: [player_id], references: [id])

  lobby_id String
  lobby    Lobby  @relation(fields: [lobby_id], references: [id])

  is_ready Boolean

  @@id([player_id, lobby_id])
  @@map("lobby_player")
}

model Lobby {
  id String @id @default(uuid())

  name String
  size Int

  host_id String
  host    User   @relation(fields: [host_id], references: [id])

  players LobbyPlayer[]

  timestamp       DateTime
  lobby_status    LobbyStatus
  gameserver_port Int?

  @@index([id])
  @@map("lobby")
}

enum UserRole {
  User
  Admin
}

enum LobbyStatus {
  Open
  Closed
  Running
  Finished
}
